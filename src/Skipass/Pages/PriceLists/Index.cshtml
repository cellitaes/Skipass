@page
@model Skipass.Pages.PriceLists.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-page="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PriceList[0].Identifier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceList[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceList[0].Hours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceList[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PriceList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Identifier)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hours)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-area="" asp-route-id="@item.Identifier" asp-page="/PriceLists/Edit">Edytuj | </a>
                        <a asp-area="" asp-route-id="@item.Identifier" asp-page="/PriceLists/Delete">Usu≈Ñ</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
